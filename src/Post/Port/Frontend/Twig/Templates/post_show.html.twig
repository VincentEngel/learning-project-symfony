{% extends '@shared/base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post: {{ post.id }}</h1>

    <p>{{ post.content }}</p>

    {% if post.parentPostId %}
        <br>
        <br>
        <a href="{{ path('post.show', {id: post.parentPostId}) }}">Parent Post: {{ post.parentPostId }}</a>
        <br>
        <br>
        <a href="{{ path('thread.show', {id: post.parentPostId}) }}">Show thread</a>
    {% endif %}

{% endblock %}